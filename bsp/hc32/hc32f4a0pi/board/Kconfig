menu "Hardware Drivers Config"

config SOC_HC32F4A0PI
    bool
    select SOC_SERIES_HC32F4
    select FM_USING_COMPONENTS_INIT
    default y

menu "Onboard Peripheral Drivers"

    

endmenu

menu "On-chip Peripheral Drivers"

    config BSP_USING_GPIO
        bool "Enable GPIO"
        select FM_USING_PIN
        default y

    menuconfig BSP_USING_UART
        bool "Enable UART"
        default y
        select FM_USING_SERIAL
        if BSP_USING_UART
            menuconfig BSP_USING_UART3
                bool "Enable UART3"
                default y
                if BSP_USING_UART3
                    config BSP_UART3_RX_USING_DMA
                        bool "Enable UART3 RX DMA"
                        select FM_SERIAL_USING_DMA
                        default n

                    config BSP_UART3_TX_USING_DMA
                        bool "Enable UART3 TX DMA"
                        select FM_SERIAL_USING_DMA
                        default n

                    config BSP_UART3_RX_BUFSIZE
                        int "Set UART3 RX buffer size"
                        range 64 65535
                        default 256

                    config BSP_UART3_TX_BUFSIZE
                        int "Set UART3 TX buffer size"
                        range 0 65535
                        default 0
                endif
        endif

    menuconfig BSP_USING_ADC
        bool "Enable ADC"
        default n
        select FM_USING_ADC
        if BSP_USING_ADC
            config BSP_USING_ADC1
                bool "Enable ADC1"
                default n
        endif
    
    menuconfig BSP_USING_TIM_TMRA
        bool "Enable timerA"
        default n
        select FM_USING_HWTIMER
        if BSP_USING_TIM_TMRA
            config BSP_USING_TIM_TMRA_1
                bool "Enable timerA-1"
                default n
        endif

    menuconfig BSP_USING_PWM_TMRA
        bool "Enable timerA output PWM"
        default n
        select FM_USING_PWM
        if BSP_USING_PWM_TMRA
        menuconfig BSP_USING_PWM_TMRA_2
            bool "Enable timerA-2 output PWM"
            default n
            if BSP_USING_PWM_TMRA_2
                config BSP_USING_PWM_TMRA_2_CH4
                    bool "Enable timerA-2 channel4"
                    default n
            endif

        menuconfig BSP_USING_PWM_TMRA_10
            bool "Enable timerA-10 output PWM"
            default n
            if BSP_USING_PWM_TMRA_10
                config BSP_USING_PWM_TMRA_10_CH1
                    bool "Enable timerA-10 channel1"
                    default n
            endif
            if BSP_USING_PWM_TMRA_10
                config BSP_USING_PWM_TMRA_10_CH2
                    bool "Enable timerA-10 channel2"
                    default n
            endif
        endif
endmenu

menu "Board extended module Drivers"

endmenu

endmenu
