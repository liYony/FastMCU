from building import *

cwd = GetCurrentDir()
src = []

src += ['clock.c']
src += ['components.c']
src += ['kservice.c']
src += ['ringbuffer.c']

if GetDepend(['FM_USING_DEVICE']):
    src += ['device.c']

if GetDepend(['FM_USING_MEMHEAP']):
    src += ['memheap.c']

path = [cwd + '/../include']

objs = DefineGroup('src', src, depend = [''], CPPPATH = path)

Return('objs')
