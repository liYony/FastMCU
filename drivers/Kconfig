menu "FMCU Drivers Configuration"
    config FM_USING_DEVICE_DRIVERS
        bool "Enable device drivers"
        default n

    if FM_USING_DEVICE_DRIVERS
        config FM_USING_SERIAL
            bool "Enable serial driver"
            default n
        
        if FM_USING_SERIAL
            config FM_SERIAL_USING_DMA
                bool "Enable serial DMA mode"
                default n
        endif

        config FM_USING_PIN
            bool "Enable pin driver"
            default n
        
        config FM_USING_ADC
            bool "Enable adc driver"
            default n
        
        config FM_USING_PWM
            bool "Enable pwm driver"
            default n

        config FM_USING_I2C
            bool "Using I2C device drivers"
            default n

        if FM_USING_I2C
            config FM_I2C_DEBUG
                bool "Use I2C debug message"
                default n

            config FM_USING_I2C_BITOPS
                bool "Use GPIO to simulate I2C"
                default y

            if FM_USING_I2C_BITOPS
                config FM_I2C_BITOPS_DEBUG
                    bool "Use simulate I2C debug message"
                    default n
            endif

            config FM_USING_SOFT_I2C
                bool "Use GPIO to soft simulate I2C"
                default n
                select FM_USING_PIN
                select FM_USING_I2C_BITOPS
            if FM_USING_SOFT_I2C
                config FM_USING_SOFT_I2C1
                    bool "Enable I2C1 Bus (software simulation)"
                    default y
                    if FM_USING_SOFT_I2C1
                        config FM_SOFT_I2C1_SCL_PIN
                            int "SCL pin number"
                            range 0 32767
                            default 1
                        config FM_SOFT_I2C1_SDA_PIN
                            int "SDA pin number"
                            range 0 32767
                            default 2
                        config FM_SOFT_I2C1_BUS_NAME
                            string "Bus name"
                            default i2c1
                        config FM_SOFT_I2C1_TIMING_DELAY
                            int "Timing delay (us)"
                            range 0 32767
                            default 10
                        config FM_SOFT_I2C1_TIMING_TIMEOUT
                            int "Timing timeout (tick)"
                            range 0 32767
                            default 10
                    endif
                config FM_USING_SOFT_I2C2
                    bool "Enable I2C2 Bus (software simulation)"
                    default n
                    if FM_USING_SOFT_I2C2
                        config FM_SOFT_I2C2_SCL_PIN
                            int "SCL pin number"
                            range 0 32767
                            default 3
                        config FM_SOFT_I2C2_SDA_PIN
                            int "SDA pin number"
                            range 0 32767
                            default 4
                        config FM_SOFT_I2C2_BUS_NAME
