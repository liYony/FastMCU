menu "FMCU Kernel Configuration"
    config SECTION_ENABLE
        bool
        default y
        if SECTION_ENABLE
            config FM_SECTION_LOG
                bool "Enable section log"
                default n
        endif
        
    menuconfig DBG_ENABLE
        bool "Enable Debug"
        default y
        if DBG_ENABLE
            config DBG_BUF_SIZE
                int "Debug log buffer size"
                range 0 1024
                default 256

            config DBG_COLOR
                bool "Debug color"
                default n
        endif
endmenu
